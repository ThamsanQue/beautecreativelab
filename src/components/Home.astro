---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

const collections = [
  {
    title: 'Handcrafted Vase Collection',
    image: '../../public/images/makeup2.jpg',
    description: 'A hand-made vase for a vintage interior design in brown shades in one of our rooms.',
    year: '2024'
  },
  {
    title: 'Modern Seating',
    image: '../../public/images/makeup.jpg',
    description: 'Contemporary leather seating that combines comfort with architectural design.',
    year: '2024'
  }
];

---

<Layout title="BeautÃ© Creative Lab | Beauty Marketing Specialist">
  <div class="min-h-screen flex flex-col">
    <section class="pt-32 pb-16 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <div class="space-y-8">
            <div>
              <p class="text-sm mb-4">Design</p>
              <h1 class="heading-xl">
                Between
                <br />
                Feeling
              </h1>
            </div>
            
            <p class="body-text max-w-md">
              Unusual collections of interior design are part of a unique experience. 
              Check out the collection of handcrafted items by local artisans.
            </p>
            
            <div class="flex justify-between items-center pt-8">
              <p class="text-sm">2024</p>
              <a 
                href="/collections" 
                class="text-sm hover:opacity-70 transition-opacity"
              >
                The latest collections
              </a>
            </div>
          </div>

          <div class="space-y-16">
            {collections.map((collection, index) => (
              <div 
                class="relative aspect-[4/3] overflow-hidden"
                data-scroll
                data-scroll-speed={index * 0.1}
              >
                <Image
                  src={collection.image}
                  alt={collection.title}
                  width={800}
                  height={600}
                  class="object-cover w-full h-full image-hover"
                />
                <div class="absolute bottom-0 left-0 right-0 p-6 text-white bg-gradient-to-t from-black/50 to-transparent">
                  <p class="text-sm">{collection.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<script>
import { gsap } from 'gsap';
import { ScrollTrigger } from 'gsap/ScrollTrigger';

gsap.registerPlugin(ScrollTrigger);

gsap.from('.heading-xl', {
  y: 100,
  opacity: 0,
  duration: 1,
  ease: 'power3.out',
  stagger: 0.2
});

gsap.from('.body-text', {
  y: 30,
  opacity: 0,
  duration: 1,
  delay: 0.5,
  ease: 'power3.out'
});

const images = document.querySelectorAll('[data-scroll]');
images.forEach((image) => {
  gsap.from(image, {
    y: 100,
    opacity: 0,
    duration: 1,
    scrollTrigger: {
      trigger: image,
      start: 'top bottom',
      end: 'top center',
      scrub: 1
    }
  });
});
</script>