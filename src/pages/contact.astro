---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact | BeautÃ© Creative Lab">
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="px-4 md:px-8 lg:px-16 pt-24 pb-16">
      <div class="max-w-6xl mx-auto">
        <h1
          class="font-light text-5xl md:text-7xl text-neutral-900 mb-8 heading-xl"
        >
          Let's Connect
        </h1>
        <p class="text-neutral-600 text-lg leading-relaxed body-text">
          Ready to elevate your beauty brand's presence? Schedule a call with us
          to discuss how we can help.
        </p>
      </div>
    </section>

    <!-- Cal.com Scheduling Section -->
    <section class="px-4 md:px-8 lg:px-16 py-24 bg-neutral-100">
      <div class="max-w-6xl mx-auto">
        <div class="flex justify-center">
          <iframe
            src="https://cal.com/nicole.bcl/30min"
            frameborder="0"
            width="100%"
            height="700"
            allowfullscreen></iframe>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);
  gsap.from(".heading-xl", {
    y: 100,
    opacity: 0,
    duration: 1,
    ease: "power3.out",
    stagger: 0.2,
  });

  gsap.from(".body-text", {
    y: 30,
    opacity: 0,
    duration: 1,
    delay: 0.5,
    ease: "power3.out",
  });

  gsap.from("iframe", {
    y: 30,
    opacity: 0,
    duration: 1,
    delay: 0.5,
    ease: "power3.out",
  });
</script>
